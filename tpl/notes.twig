{# Notes list #}
{% extends 'layout.twig' %}

{% block container %}

<form action="" method="get">
    <div class="field has-addons">
        <div class="control">
            <input class="input" type="text" name="q" value="{{ q }}" placeholder="Search note">
        </div>
        <div class="control">
            <button class="button is-info">
                Search
            </button>
        </div>
    </div>
</form>

<nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
        <li class="is-active"><a href="/">Notes</a></li>
    </ul>
</nav>



<div class="level">
    <div class="level-left">
        <h1 class="title">{% if q %}Search for notes{% else %}Notes{% endif %}</h1>
    </div>
    <div class="level-right">
        <a href="/note" class="button is-link is-light">Write a note</a>
    </div>
</div>


{% for note in notes %}
<article class="media">
    <figure class="media-left">
        <p class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/128x128.png">
        </p>
    </figure>

    <div class="media-content">
        <div class="content">
            <a href="/note?id={{ note.id }}" class="has-text-dark">
            <p>
                <strong>{{ note.title }}</strong> {#<small>@johnsmith</small>#}
                <br>
                {{ (note.text|striptags)|slice(0,100) }}
            </p>
            </a>
        </div>
        <nav class="level is-mobile">
            <div class="level-left">
{#                <a class="level-item">#}
{#                    <span class="icon is-small"><i class="fas fa-reply"></i></span>#}
{#                </a>#}
{#                <a class="level-item">#}
{#                    <span class="icon is-small"><i class="fas fa-retweet"></i></span>#}
{#                </a>#}
{#                <a class="level-item">#}
{#                    <span class="icon is-small"><i class="fas fa-heart"></i></span>#}
{#                </a>#}
                <small>#{{ note.id }} created at {{ note.dateadd|date('d.m.Y') }}</small>
            </div>
        </nav>
    </div>
    <div class="media-right">
        <button class="delete js-remove-note" data-note-id="{{ note.id }}"></button>
    </div>
</article>
{% else %}
    <!-- @todo #8 add styles to no result message -->
    <p>I searched, but I didn't find any notes, so you can <a href="/note">create a new one</a>.</p>
{% endfor %}



{% endblock %}

{% block javascript %}
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
    // @todo #5 transform to js-module
    $('.js-remove-note').on('click', (event) => {
        // @todo #5 Ask for remove confirmation
        console.log('remove', event);
        console.log('id',  $(event.target).data('note-id') );
        $.post(
            "/remove",
            { 'id' : $(event.target).data('note-id') },
            'json'
        ).done(
            (data) => {
                let resp = JSON.parse(data);
                console.log('data', resp)
                if (resp.result == 'ok') {
                    $(event.target).closest('article').hide('slow');
                } else if (resp.result == 'error') {
                    alert('Some error: ' + resp.message);
                } else {
                    alert("Error in console.");
                    console.log(resp);
                }
            }
        ).fail((jqXHR, textStatus) => {
                alert("Remove equest failed, try again or open console for debug. textStatus=" + textStatus);
                console.log(jqXHR);
            }
        );

    });
</script>
{% endblock %}
